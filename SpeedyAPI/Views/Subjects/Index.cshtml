@model IEnumerable<SpeedyAPI.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1>Subjects of @ViewBag.majorName</h1>

<p>
    <a asp-action="Create" asp-route-majorId="@ViewBag.majorId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teacher_observer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.room)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.teacherAccount.email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a> |
                    <a asp-action="AddStudents" asp-route-name="@item.name" asp-route-id="@item.id">Add students</a>
                </td>
            </tr>
        }
    </tbody>
</table>
